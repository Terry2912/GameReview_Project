<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Features\GameDetails.razor" />
    <Content Remove="Features\MainLayout.razor" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.4" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Features\MainLayout.razor" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Features\GameDetails.razor" />
    <_ContentIncludedByDefault Remove="Features\MainLayout.razor" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Features\GameDetails.razor" />
    <None Include="Features\Layout\MainLayout.razor" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\games\" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Features\GameDetails.razor" />
  </ItemGroup>

</Project>
